# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js, py}]
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4

# JavaScript and TypeScript
[*.{js, jsx, ts, tsx}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2

# Yaml ans Json
[*.{yml, yaml, json}]
indent_style = space
indent_size = 2

# HTML and CSS
[*.{html, htm, css}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile.*]
indent_style = space
indent_size = 4

# Sql
[*.sql]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2
